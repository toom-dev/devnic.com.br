---
import { ContentSection } from "@blocks/ContentSection";
import Layout from "../layouts/Layout.astro";
import { Button } from "@components/Button";
---

<Layout
    title="Contato enviado!"
    description="Obrigado por entrar em contato! Sua mensagem foi enviada com sucesso. Em breve entraremos em contato."
/>

<main class="page-content">
    <ContentSection>
        <div
            class="text-center max-w-xl lg:my-32 flex flex-col gap-5 justify-center items-center"
        >
            <h1 class="text-h1-lg bg-tertiary">Contato Enviado!</h1>
            <p>Seu contato foi enviado com suceso!</p>

            <Button variant="primary" link="/" align="center"> Voltar </Button>
        </div>
    </ContentSection>
</main>
